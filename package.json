{
    "name": "nodejs_mongodb",
    "version": "1.0.0",
    "description": "test nodejs & mongodb",
    "main": "index.js",
    "scripts": {
        "start": "cross-env NODE_ENV=development docker-compose up -d && nodemon",
        "test": "cross-env NODE_ENV=test jest --detectOpenHandles --forceExit",
        "coverage": "cat ./test/coverage/lcov.info | coveralls",
        "lint": "eslint --fix {src,test,config}/**/*.{js,ts}",
        "prettier": "prettier",
        "prettier:base": "npm run prettier **/*.{js,json,scss,md,ts,html,component.html}",
        "prettier:write": "npm run prettier:base --write",
        "prettier:check": "npm run prettier:base --list-different",
        "migrate:up": "cd migrations/ && migrate-mongo up",
        "migrate:down": "cd migrations/ && migrate-mongo down"
    },
    "keywords": [
        "node",
        "typescript",
        "mongo",
        "mongoose",
        "fastify",
        "swagger",
        "jest"
    ],
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@types/node": "^13.13.51",
        "coveralls": "^3.1.0",
        "cross-env": "^7.0.3",
        "jest": "^25.5.4",
        "nodemon": "^2.0.7",
        "prettier": "^1.19.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^25.5.1",
        "ts-node": "^8.10.2",
        "typescript": "^3.9.9"
    },

    "dependencies": {
        "@types/mongoose": "^5.10.5",
        "@typescript-eslint/eslint-plugin": "^2.34.0",
        "@typescript-eslint/parser": "^2.34.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.4.0",
        "fastify": "^2.15.3",
        "fastify-session": "^5.2.1",
        "fastify-swagger": "^2.6.0",
        "migrate-mongo": "^9.0.0",
        "mongodb-memory-server": "^6.9.6",
        "mongoose": "^5.12.7"
    }
}
